
<%- include("partials/header"); -%>
<h1>Compose</h1>
<form class="" action="/edit/<%=id%>" method="post">
  <div class="form-group">
    <label>Title</label>
    <textarea class="form-control" name="postTitle"><%=title%></textarea>
    <label>Post</label>
    <textarea class="form-control" name="postBody" rows="5" cols="30"><%=content%></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

